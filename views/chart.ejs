<% var lastYear=lastYearData; %>
<% var thisYear=thisYearData; %>
<script>
  var getLastYear = "<%= lastYear  %>".split(",");
  var getThisYear = "<%= thisYear  %>".split(",");

  Chart.plugins.register(ChartDataLabels);
  Chart.defaults.global.animation.duration = 0

  var ctx = document.getElementById("chart");

  var chart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: [1, 2, 3],
      datasets: [
        {
          label: "Last Year",
          data: getLastYear,
          // data: [11211, 12343, 10323],
          backgroundColor: "#9FE0F8",
          borderRadius: 5,
          borderSkipped: false,
          datalabels: {
            align: 'end',
            anchor: 'end'
          }
        },
        {
          label: "This Year",
          data: getThisYear,
          // data: [10211, 14341, 10321],
          backgroundColor: "#093EDD",
          borderRadius: 5,
          borderSkipped: false,
          datalabels: {
            align: 'end',
            anchor: 'end'
          }
        }
      ]
    },
    options: {
      layout: {
      padding: {
        top: 20,
      }
    },
      cornerRadius: 5,
      legend: {
        display: false
      },
      tooltips: {
        enabled: false
      },
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: true
          },
          display: false,
        }],
        xAxes: [{
          display: false,
        }],
      },
      plugins: {
        datalabels: {
          borderRadius: 4,
          color: 'black',
          font: {
            weight: 'bold',
            size: 20
          },
          // can use formatter to make any other adjustments to the label
          formatter: function (value, context) {
            return "$" + value;
          },
          padding: 6
        }
      }
    }
    
  });


</script>