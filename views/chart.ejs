<% var lastYear=lastYearData; %>
<% var thisYear=thisYearData; %>
<script>
  var getLastYear = "<%= lastYear  %>".split(",");
  var getThisYear = "<%= thisYear  %>".split(",");
  
  Chart.plugins.register(ChartDataLabels);
  Chart.defaults.global.animation.duration = 0

  var chart = new Chart('chart', {
    type: 'bar',
    data: {
      labels: ["February", "March", "April"],
      datasets: [
        {
          label: "Last Year",
          data: getLastYear,
          // data: [1021, 1434, 1032],
          backgroundColor: "#9FE0F8",
          borderRadius: 5,
          borderSkipped: false,
          datalabels: {
            align: 'end',
            anchor: 'end'
          }
        },
        {
          // label: "This Year",
          label: "This Year",
          data: getThisYear,
          backgroundColor: "#093EDD",
          borderRadius: 5,
          borderSkipped: false,
          datalabels: {
            align: 'end',
            anchor: 'end'
          }
        }
      ]
    },
    options: {
      cornerRadius: 5,
      legend: {
        display: false
      },
      tooltips: {
        enabled: false
      },
      scales: {
        yAxes: [{
          display: false,
        }],
        xAxes: [{
          display: false,
        }],
      },
      plugins: {
        datalabels: {
          borderRadius: 4,
          color: 'black',
          font: {
            weight: 'bold',
            size: 20
          },
          // can use formatter to make any other adjustments to the label
          formatter: function (value, context) {
            return "$" + value;
          },
          padding: 6
        }
      }
    }
  });


</script>