<!doctype html>

<html lang="en">

<head>
  <meta charset="utf-8">

  <title>Month by Month Chart</title>
  <meta name="description" content="The HTML5 Herald">
  <link rel="stylesheet" href="/stylesheets/index.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
  <!-- https://github.com/jedtrow/Chart.js-Rounded-Bar-Charts -->
  <script type="text/javascript" charset="utf-8" src="/javascripts/Chart.roundedBarCharts.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/dom-to-image/2.6.0/dom-to-image.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/aws-sdk/2.892.0/aws-sdk.min.js"></script>

</head>

<body>
    
    <div id="month-by-month-chart" class="chart-container">
      <div class="top-line"></div>
      <div class="legend">
        <div class="legend-label">
          <div class="legend-dot last-year"></div>Last Year
        </div>
        <div class="legend-label">
          <div class="legend-dot this-year"></div>This Year
        </div>
      </div>
      <canvas id="chart"></canvas>
      <div class="x-axis">
        <div class="x-axis-label">
          <div class="temperature">
            <%= month1LastYearTemp %>&#176; | <%= month1CurrentYearTemp %>&#176;
          </div>
          <div class="month">
            <%= month1Label %>
          </div>
        </div>
        <div class="x-axis-label">
          <div class="temperature">
            <%= month2LastYearTemp %>&#176; | <%= month2CurrentYearTemp %>&#176;
          </div>
          <div class="month">
            <%= month2Label %>
          </div>
        </div>
        <div class="x-axis-label">
          <div class="temperature">
            <%= month3LastYearTemp %>&#176; | <%= month3CurrentYearTemp %>&#176;
          </div>
          <div class="month">
            <%= month3Label %>
          </div>
        </div>
      </div>
    </div>

  <%- include('chart') %>
  <!-- re add this to allow upload -->
  <%#- include('upload') %>
</body>

</html>